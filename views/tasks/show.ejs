<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task List</title>
</head>

<body>

    <h2>Task List</h2>

    
    <a href="/new">Add Task to List</a>

    <% if (tasks.length > 0) { %>
        <ul>
            <% tasks.forEach(task => { %>
                <li>
                    <a href="/show/<%= task._id %>">
                        <%= task.title %> (Priority: <%= task.priority || 'N/A' %>)
                    </a>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>No tasks found.</p>
    <% } %>

</body>

</html>